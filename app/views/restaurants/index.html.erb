

<% @restaurants.each do |restaurant| %>
<h2><%= restaurant.name %></h2><br>
<p>Address: <%= restaurant.address %></p><br>
<p>Phone number: <%= restaurant.phone_number %></p><br>
<p>Food type: <%= restaurant.category %></p><br>
<%= link_to "Show", restaurant_path(restaurant), class: "btn btn-primary" %>
<% end %>
